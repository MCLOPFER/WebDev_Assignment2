
<tr>
    <td>
        <div class="columns has-background-dark is-vcentered">
            <div class="column">
                {# By dynamicly setting the variable {{ day }} on this element I can access it in javascript by using its unique id #}
                <p class="is-size-1 has-text-white has-text-weight-bold is-capitalized">{{ day }}</p>
            </div>
            <div class="column">
                <div class="box has-background-dark" style="height: 50%; width: 50%;" id="{{ day }}_weather_code_image"></div>
            </div>
        </div>
    </td>
    <td class="is-size-3" id="{{ day }}_max_temp"></td>
    <td class="is-size-3" id="{{ day }}_min_temp"></td>
    <td class="is-size-3" id="{{ day }}_wind_speed"></td>
    <td class="is-size-3" id="{{ day }}_precipitation_probability"></td>
</tr>
